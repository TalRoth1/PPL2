{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Q21 Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "test/test.spec.ts"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
